{
  "name": "webpack-2.0-react-boilerplate",
  "version": "1.0.0",
  "description": "webpack-2.0 and react boilerplate v1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config config/webpack.config.js --progress",
    "start": "webpack --config ./config/webpack.config.js --progress && webpack-dev-server -d --hot --config ./config/webpack.config.js --watch --progress",
    "production": "NODE_ENV=production webpack --config config/webpack.config.js --progress",
    "test": "NODE_ENV=test mocha --require ./config/mochaSetup.js --compilers babel-core/register ./src/__tests__/*test.js",
    "test:watch": "npm test -- -w"
  },
  "keywords": [
    "react",
    "webpack"
  ],
  "author": "Alexandre Di Guida <alex@gearedapp.co.uk>",
  "license": "ISC",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-webpack-alias": "^2.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "css-hot-loader": "^1.3.0",
    "css-loader": "^0.28.7",
    "enzyme": "^2.9.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^3.4.0",
    "jsdom": "^11.2.0",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^3.1.1",
    "postcss-loader": "^2.0.6",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.6",
    "sinon": "^3.2.1",
    "style-loader": "^0.18.2",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
